<scene version="3.0.0">
    <integrator type="path"/>

    <sensor type="perspective">
        <float name="fov" value="39"/>
        <transform name="to_world">
            <lookat origin="0, 1, 3.2" target="0, 1, 0" up="0, 1, 0"/>
        </transform>

        <sampler type="independent">
            <integer name="sample_count" value="16"/>
        </sampler>

        <film type="hdrfilm">
            <integer name="width" value="512"/>
            <integer name="height" value="512"/>
            <rfilter type="tent"/>
            <string name="pixel_format" value="rgb"/>
        </film>
    </sensor>

    <emitter type="directional">
        <vector name="direction" x="-1" y="-1" z="-1"/>
        <rgb name="irradiance" value="2.5, 2.5, 2.5"/>
    </emitter>

    <shape type="sphere">
        <float name="radius" value="0.35"/>
        <transform name="to_world">
            <translate x="0" y="1.2" z="0"/>
        </transform>
        <bsdf type="principled">
            <rgb name="base_color" value="1, 1, 1"/>
            <float name="metallic" value="0"/>
            <float name="roughness" value="0.65"/>
            <float name="specular" value="0.47"/>
            <float name="spec_tint" value="0"/>
            <float name="anisotropic" value="0"/>
            <float name="sheen" value="0"/>
            <float name="sheen_tint" value="0"/>
            <float name="clearcoat" value="0"/>
            <float name="clearcoat_gloss" value="0"/>
        </bsdf>
    </shape>
</scene>
